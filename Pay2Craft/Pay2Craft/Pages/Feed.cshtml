@page
@model FeedModel
@{
    ViewData["Title"] = "Feed";
}

<div class="min-h-screen bg-gray-50 flex flex-col items-center">
    <!-- Header -->
    <header class="w-full bg-white shadow-md py-4">
        <div class="container mx-auto flex justify-between items-center px-4">
            <div class="flex items-center gap-4">
                <img src="~/images/pay2craftLogo.png" alt="Logo" class="h-8">
                <h1 class="text-2xl font-bold">Pay2Craft</h1>
            </div>
            <nav>
                <ul class="flex gap-4">
                    <li><a href="/Explore" class="text-gray-600 hover:text-black">Explore</a></li>
                    <li><a href="/Notifications" class="text-gray-600 hover:text-black">Notifications</a></li>
                    <li><a href="/Messages" class="text-gray-600 hover:text-black">Messages</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Feed Section -->
    <section class="container mx-auto px-4 mt-6">
    <h2 class="text-lg font-semibold mb-4 text-black">Feed</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        @for (int i = 0; i < 9; i++)
        {
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <img src="https://via.placeholder.com/300x200" alt="Post Image" class="w-full">
                <div class="p-4">
                    <h3 class="text-gray-800 font-semibold">John Doe</h3>
                    <p class="text-gray-600 text-sm">This is a dummy post description.</p>
                    <div class="mt-4 flex justify-between items-center text-gray-600">
                        <button class="like-button flex items-center" onclick="toggleLike(this)">
                            <svg width="20px" height="20px" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg" class="mr-1">
                                <path d="M21.886 5.115c3.521 0 6.376 2.855 6.376 6.376 0 1.809-0.754 3.439-1.964 4.6l-10.297 10.349-10.484-10.536c-1.1-1.146-1.778-2.699-1.778-4.413 0-3.522 2.855-6.376 6.376-6.376 2.652 0 4.925 1.62 5.886 3.924 0.961-2.304 3.234-3.924 5.886-3.924zM21.886 4.049c-2.345 0-4.499 1.089-5.886 2.884-1.386-1.795-3.54-2.884-5.886-2.884-4.104 0-7.442 3.339-7.442 7.442 0 1.928 0.737 3.758 2.075 5.152l11.253 11.309 11.053-11.108c1.46-1.402 2.275-3.308 2.275-5.352 0-4.104-3.339-7.442-7.442-7.442v0z" fill="#000000"></path>
                            </svg>
                            <span>56</span>
                        </button>
                        <span class="flex items-center">
                            <svg fill="#000000" width="20px" height="20px" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="mr-1">
                                <path d="M12,2A10,10,0,0,0,2,12a9.89,9.89,0,0,0,2.26,6.33l-2,2a1,1,0,0,0-.21,1.09A1,1,0,0,0,3,22h9A10,10,0,0,0,12,2Zm0,18H5.41l.93-.93a1,1,0,0,0,0-1.41A8,8,0,1,1,12,20Z"/>
                            </svg>
                            12
                        </span>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
</div>